<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- RelativeLayout holding 2 more RelativeLayouts (Upper row & Lower row) together in center-->
    <RelativeLayout
        android:id="@+id/relative_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="1.45"
        android:scaleY="1.5">

        <!-- RelativeLayout for Upper 6 images -->
        <RelativeLayout
            android:id="@+id/first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <!-- First row f1 to f6 -->
            <ImageView
                android:id="@+id/f1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/f1" />

            <ImageView
                android:id="@+id/f2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f1"
                android:layout_toRightOf="@+id/f1"
                android:src="@drawable/f2" />

            <ImageView
                android:id="@+id/f3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f2"
                android:layout_toRightOf="@+id/f2"
                android:src="@drawable/f3" />

            <ImageView
                android:id="@+id/f4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f3"
                android:layout_toRightOf="@+id/f3"
                android:src="@drawable/f4" />

            <ImageView
                android:id="@+id/f5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f4"
                android:layout_toRightOf="@+id/f4"
                android:src="@drawable/f5" />

            <ImageView
                android:id="@+id/f6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f5"
                android:layout_toRightOf="@+id/f5"
                android:scaleX="1.0001"
                android:scaleY="1.0001"
                android:src="@drawable/f6" />
        </RelativeLayout>

        <!-- RelativeLayout for Middle 6 images -->
        <RelativeLayout
            android:id="@+id/second_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_row"
            android:layout_centerHorizontal="true">
            <!-- Second row f7 to f12 -->
            <ImageView
                android:id="@+id/f7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/f7" />

            <ImageView
                android:id="@+id/f8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f7"
                android:layout_toRightOf="@+id/f7"
                android:onClick="miniaturePaintingGallery"
                android:scaleX="1.01"
                android:scaleY="1.01"
                android:src="@drawable/f8" />

            <ImageView
                android:id="@+id/f9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f8"
                android:layout_toRightOf="@+id/f8"
                android:onClick="indianMetalwareDecorativeArt"
                android:scaleX="1.01"
                android:scaleY="1.01"
                android:src="@drawable/f9" />

            <ImageView
                android:id="@+id/f10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f9"
                android:layout_toRightOf="@+id/f9"
                android:src="@drawable/f10" />

            <ImageView
                android:id="@+id/f11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f10"
                android:layout_toRightOf="@+id/f10"
                android:onClick="coinsGallery"
                android:src="@drawable/f11" />

            <ImageView
                android:id="@+id/f12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f11"
                android:layout_toRightOf="@+id/f11"
                android:scaleX="1.01"
                android:scaleY="1.01"
                android:src="@drawable/f12" />
        </RelativeLayout>

        <!-- RelativeLayout for Lower 6 images -->
        <RelativeLayout
            android:id="@+id/third_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_row"
            android:layout_centerHorizontal="true">
            <!-- Third row f13 to f18 -->
            <ImageView
                android:id="@+id/f13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/f13" />

            <ImageView
                android:id="@+id/f14"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f13"
                android:layout_toRightOf="@+id/f13"
                android:scaleX="1.01"
                android:scaleY="1.01"
                android:src="@drawable/f14" />

            <ImageView
                android:id="@+id/f15"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f14"
                android:layout_toRightOf="@+id/f14"
                android:onClick="printsGallery"
                android:scaleX="1.01"
                android:scaleY="1.01"
                android:src="@drawable/f15" />

            <ImageView
                android:id="@+id/f16"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f15"
                android:layout_toRightOf="@+id/f15"
                android:src="@drawable/f16" />

            <ImageView
                android:id="@+id/f17"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f16"
                android:layout_toRightOf="@+id/f16"
                android:scaleX="1.01"
                android:src="@drawable/f17" />

            <ImageView
                android:id="@+id/f18"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/f17"
                android:layout_toRightOf="@+id/f17"
                android:scaleY="1.01"
                android:src="@drawable/f18" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- First Floor Text is put below all images layout but
    it is displayed above it because Relative ImageLayout is
    Aligned to be Center in Parent-->
    <RelativeLayout
        android:id="@+id/relative_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/first_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="First Floor"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>
