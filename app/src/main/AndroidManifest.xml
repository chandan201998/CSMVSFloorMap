<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.csmvs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash Activity must be called first -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"/>

        <!-- Ground Floor Map Activity in Landscape orientation with NoActionBar Theme -->
        <activity
            android:name=".GroundMap"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Clickable Item's Activities from Ground Floor whose data is available -->
        <activity
            android:name=".SculptureGallery"
            android:label="Sculpture Gallery" />
        <activity
            android:name=".PrePhotoHistoryGallery"
            android:label="Pre Photo &amp; History Gallery" />
        <activity
            android:name=".NaturalHistorySection"
            android:label="Natural History Gallery" />

        <!-- First Floor Map Activity in Landscape orientation with NoActionBar Theme -->
        <activity
            android:name=".FirstMap"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Clickable Item's Activities from First Floor whose data is available -->
        <activity
            android:name=".MiniaturePaintingGallery"
            android:label="Miniature Painting Gallery" />
        <activity
            android:name=".IndianMetalwareDecorativeArt"
            android:label="Indian Metalware &amp; Decorative Art" />
        <activity
            android:name=".PrintsGallery"
            android:label="Prints Gallery" />
        <activity
            android:name=".CoinsGallery"
            android:label="Coins Gallery" />
        <activity
            android:name=".HimalayanArtGallery"
            android:label="Himalayan Art Gallery"/>

        <!-- Second Floor Map Activity in Landscape orientation with NoActionBar Theme -->
        <activity
            android:name=".SecondMap"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Clickable Item's Activities from Second Floor whose data is available -->
        <activity
            android:name=".EuropeanPaintingGalleryL"
            android:label="European Painting Gallery (Sir Donb Tata)" />
        <activity
            android:name=".EuropeanPaintingGalleryR"
            android:label="European Painting Gallery (Sir Ratan Tata)" />
        <activity
            android:name=".ArmsArmourGallery"
            android:label="Arms &amp; Armour Gallery" />
        <activity
            android:name=".IndianTextilesCostumesGallery"
            android:label="Indian Textiles &amp; Costumes Gallery" />
        <activity
            android:name=".BombaySchoolGallery"
            android:label="Bombay School Gallery"/>
        <activity
            android:name=".JehangirSabvalaGallery"
            android:label="Jehangir Sabvala Gallery"/>
        <activity
            android:name=".ChineseJapaneseArtGallery"
            android:label="Chinese &amp; Japanese Art Gallery"/>

    </application>

</manifest>